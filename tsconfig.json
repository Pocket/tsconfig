{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      // aws sdk needs this? oooookay
      // without it, tsc fails due to a couple missing types
      "dom",
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "strictNullChecks": true,
    "declaration": true
  },
  "exclude": ["node_modules", "src/test/*", "src/**/*.spec.ts", "src/**/*.integration.ts"],
  "include": ["src/**/*.ts", "src/config"]
}
